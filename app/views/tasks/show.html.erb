<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<input type="checkbox" name="completed" id="" <%= "checked" if @task.completed %>>
<%= link_to "Back", tasks_path %>
<%= link_to "Edit", edit_path(@task.id) %>
<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
